{
  "name": "catune-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/catune",
    "build": "npm run build:wasm && npm run build -w apps/catune",
    "build:wasm": "cd wasm/catune-solver && wasm-pack build --target web --release",
    "test": "npm run test -w apps/catune",
    "test:watch": "npm run test:watch -w apps/catune",
    "lint": "eslint apps/ packages/",
    "lint:fix": "eslint --fix apps/ packages/",
    "typecheck": "tsc -b apps/catune packages/core",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-solid": "^0.14.5",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.0",
    "vite-plugin-solid": "^2.11.10",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.0"
  }
}
